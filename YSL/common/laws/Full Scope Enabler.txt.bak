						AND = {
							has_dlc = "Zeus"
							ROOT = { holder_scope = { primary_title = { has_law = status_of_women_4 } } }
							OR = {
								is_patrician = no
								liege = {
									primary_title = {
										OR = {
											has_law = true_cognatic_succession
											has_law = cognatic_succession
